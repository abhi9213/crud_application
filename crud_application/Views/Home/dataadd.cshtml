
@model crud_application.Models.mymodelClass1

@using (Html.BeginForm("dataadd", "Home", FormMethod.Post))
{
    @Html.HiddenFor(m=>m.id)
    <div class="form-group">
        <label>NAME</label>
        @Html.TextBoxFor(m => m.name, new { @class = "form-control", @required = "required", data_rule_required = "true" })
    </div>

    <div class="form-group">
        <label>MOBILE</label>
        @Html.TextBoxFor(m => m.mobile, new { @class = "form-control", @required = "required", data_rule_required = "true" })
    </div>

    <div class="form-group">
        <label>EMAIL ID</label>
        @Html.TextBoxFor(m => m.email, new { @class = "form-control", @required = "required", data_rule_required = "true" })
    </div>

    <div class="form-group">
        <label>SALARY</label>
        @Html.TextBoxFor(m => m.sal, new { @class = "form-control", @required = "required", data_rule_required = "true" })
    </div>

    <div class="form-group">
        <label>DEPARTMENT</label>
        @Html.TextBoxFor(m => m.dept, new { @class = "form-control", @required = "required", data_rule_required = "true" })
    </div>

    <div class="form-group">
        <label>ZIPCODE</label>
        @Html.TextBoxFor(m => m.zip, new { @class = "form-control", @required = "required", data_rule_required = "true" })
    </div>


    <button type="submit" class="btn-default">SUBMIT</button>
}